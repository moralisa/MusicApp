<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/tan_background"
    android:orientation="vertical">

    <TextView
        android:id="@+id/myMusic"
        style="@style/CategoryStyle"
        android:background="@color/category_myMusic"
        android:text="@string/category_myMusic" />

    <TextView
        android:id="@+id/unknown"
        style="@style/CategoryStyle"
        android:background="@color/category_unknown"
        android:text="@string/category_unknown" />

    <TextView
        android:id="@+id/download"
        style="@style/CategoryStyle"
        android:background="@color/category_download"
        android:text="@string/category_download" />

</LinearLayout>